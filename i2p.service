[Unit]
Description=i2p
After=docker.service
Requires=docker.service media-sdb.mount

[Service]
EnvironmentFile=/etc/profile.env
TimeoutStartSec=0
Restart=always
RestartSec=10s
Type=notify
NotifyAccess=all
ExecStartPre=-/usr/bin/docker pull geti2p/i2p
ExecStart=/opt/systemd-docker \
  --cgroups name=systemd \
  run --rm --name %n \
  --volume ${MOUNT_ROOT_B}/i2p:/var/lib/i2p:z \
  --port 4444:4444 \
  --port 6668:6668 \
  --port 7657:7657 \
  geti2p/i2p

[Install]
WantedBy=multi-user.target
