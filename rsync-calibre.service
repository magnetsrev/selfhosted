[Unit]
Description=Rsync Backup
After=docker.service
Requires=docker.service media-sdb.mount media-sdc.mount

[Service]
EnvironmentFile=/etc/profile.env
TimeoutStartSec=0
Type=notify
NotifyAccess=all
ExecStartPre=-/usr/bin/docker pull subdavis/rsync
ExecStart=/opt/systemd-docker \
  --cgroups name=systemd \
  run --rm --name %n \
  --volume ${MOUNT_ROOT_B}/calibre:/source \
  --volume ${MOUNT_ROOT_C}/calibre_backup:/dest \
  subdavis/rsync

[Install]
WantedBy=multi-user.target
